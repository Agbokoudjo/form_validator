{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module":"ESNext",
    "lib": ["DOM", "DOM.Iterable","esnext","ES5"],
    "skipLibCheck": true,
   "outDir": "dist",
    "rootDir": "src",  
    "allowImportingTsExtensions":false,
    "declarationMap": true,
    "emitDeclarationOnly":false,
    "isolatedModules":false,
    "moduleDetection": "force",
    "esModuleInterop": true,
     "noEmit": false,  // Autorise la génération des fichiers compilés
    "strict": true,
    "moduleResolution": "bundler",    // Permet de résoudre les modules comme Node.js
    "declaration": true,     
    "allowJs":false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
     "allowSyntheticDefaultImports": true,
    "types": [
      "jest", 
      "jquery",
      "node"  
    ],
  },
  "include": ["src/**/*", "global.d.ts","pdfjs-dist.d.ts", "public/workers", "src/workers/pdf.worker.min.js"],
  "exclude": ["node_modules","src/main.ts","dist","src/test/**/*"]
}
